<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="def_progress_style">
        <item name="outer_layer_slide_color">@color/white</item>
        <item name="outer_layer_stroke_color">#90F76E6B</item>
        <item name="outer_layer_stroke_width">2dp</item>
        <item name="middle_layer_bg_color">#D1D1D1</item>
        <item name="middle_layer_progress_color">@color/work_background_color</item>
        <item name="middle_layer_progress_width">4dp</item>
        <item name="middle_layer_small_circle_slide_color">@color/white</item>
        <item name="middle_layer_small_circle_stroke_color">@color/work_background_color</item>
        <item name="middle_layer_small_circle_size">10dp</item>
        <item name="middle_layer_small_circle_stroke_width">5dp</item>
        <item name="shadow_layer_color">@color/work_background_color</item>
        <item name="shadow_layer_inner_color">@color/work_background_color</item>
        <item name="inner_text_size">50sp</item>
        <item name="inner_text_color">#fff</item>
        <item name="inner_text_start">开始</item>
        <item name="inner_text_end">时间到</item>
        <item name="inner_text_time_style">mm:ss</item>
    </style>

    <style name="TimeCatWidget" />

    <style name="TimeCatWidget.EditText">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/master_textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TimeCatWidget.TagCloudView">
        <item name="android:background">@drawable/bg_tagcloudview_light_selector</item>
        <item name="tcvBackground">@drawable/bg_tag_selector</item>
        <item name="tcvBorder">8dp</item>
        <item name="tcvCanTagClick">false</item>
        <item name="tcvItemBorderHorizontal">8dp</item>
        <item name="tcvItemBorderVertical">6dp</item>
        <item name="tcvSingleLine">false</item>
        <item name="tcvTextColor">@color/master_textColorPrimary</item>
    </style>

    <style name="TimeCatWidget.EditText.MomentLike">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/master_textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">5</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TimeCatWidget.EditText.PaddingHorizontal">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/master_textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    <style name="Block.Material.SpinnerStyle" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/master_textColorPrimary</item>
        <item name="ms_dropdown_height">wrap_content</item>
        <item name="ms_text_color">@color/master_textColorPrimary</item>
        <item name="ms_background_selector">@drawable/view_config_bg_edittext</item>
        <item name="ms_dropdown_bg">@drawable/ms_drop_down_bg_radius</item>
    </style>
</resources>