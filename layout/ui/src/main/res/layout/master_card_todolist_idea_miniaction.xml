<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbarSize="2dp">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_full_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="7dp"
                android:src="@drawable/ic_fullscreen_black_24dp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_attachment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/ic_attach_file_black_24dp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_reminder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/ic_add_alarm_black_24dp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_labels"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/ic_label_outline_black_24dp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_speech"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="9dp"
                android:src="@drawable/ic_audio_white_24dp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_checklist"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/act_enable_check_list"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_content_copy_white_24dp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_nlp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_nlp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_translate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_translate_black_24dp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_search_black_24dp"
                android:tint="@color/master_icon_view" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/ic_share_white_24dp"
                android:tint="@color/master_icon_view" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/iv_more"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:tint="@color/master_icon_view" />
</LinearLayout>
