<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.timecat.layout.ui.business.timecat.TimeCatHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone" />


    <ScrollView
        android:id="@+id/timecat_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="0dp">

            <com.timecat.layout.ui.business.timecat.TimeCatLayout
                android:id="@+id/timecat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                app:timecat_lineSpace="0dp"
                app:timecat_textSize="@dimen/text_size_tiny" />

        </RelativeLayout>

    </ScrollView>

    <com.timecat.layout.ui.business.timecat.TimeCatBottom
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</merge>